<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATH PUZZLE GAME"
        android:textColor="@color/white"
        android:textSize="34sp"/>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="410dp"
        android:layout_height="666dp"
        app:columnCount="5"
        tools:layout_editor_absoluteY="65dp">

        <TextView
            android:id="@+id/maintile1"
            android:layout_width="200px"
            android:layout_height="90px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:background="@color/sand"
            android:clickable="true"
            android:onClick="set_maintile1"
            android:padding="10px"
            android:text="?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40px"
            android:layout_height="90px"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"

            android:text="+"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/maintile2"
            android:layout_width="200px"
            android:layout_height="90px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:background="@color/sand"
            android:onClick="set_maintile2"
            android:padding="10px"
            android:text="?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/white"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/taddresult"
            android:layout_width="200px"
            android:layout_height="90px"
            android:layout_weight="1"
            android:padding="10px"
            android:text="addres"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_row="0" />
        <TextView
            android:id="@+id/maintile3"
            android:layout_width="200px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:background="@color/sand"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:clickable="true"
            android:padding="10px"
            android:onClick="set_maintile3"
            android:text="?" />
    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>